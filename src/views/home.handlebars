<div>
    <h2>All Products by Handlebars!</h2>
    <h3>{{this.title}}</h3>
    
    <br>
    <div>
        <table border='4'>
            <!--Cabecera de la tabla-->
            <thead>
                <tr>
                    <th>id</th>
                    <th>title</th>
                    <th>description</th>
                    <th>price</th>
                    <th>thumbnail</th>
                    <th>code</th>
                    <th>stock</th>
                    <th>category</th>
                </tr>
            </thead>
            <!--Cuerpo de la tabla-->
            <tbody>
                <!--Fila-->
                {{#each list}}
                <tr>
                    <!--Columna-->
                    <form id="allProducts">
                        <td>{{this.id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.description}}</td>
                        <td>$ {{this.price}}</td>
                        <td>{{this.thumbnail}}</td>
                        <td>{{this.code}}</td>
                        <td>{{this.stock}}</td>
                        {{#if this.category}}
                        <td>{{this.category}}</td>
                        {{else}}
                        <td>Sin Categoria</td>
                        {{/if}}
                    </form>
                </tr>
                {{/each}}
            </tbody>

        </table>

    </div>

</div>
